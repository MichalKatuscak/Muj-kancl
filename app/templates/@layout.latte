<body>
	<script> document.body.className+=' js' </script>
{default $showPanel = 1}
{if $showPanel}
<div class="navbar navbar-fixed-top">
      <div class="navbar-inner navbar-inner-first">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Můj kancl</a>
          <div class="nav-collapse">
            <ul class="nav" style="text-align:center">
              {if $user->group_id == 1}<li{ifCurrent Homepage:*} class="active"{/ifCurrent}><a n:href="Homepage:default"><span class="icon-shopping-cart"></span> Administrátorský přehled</a></li>{/if}  
            </ul>
            <ul class="nav pull-right">
              <li><a title="{if $user->group_id == 1}(Administrátor)
{elseif $user->group_id == 3}(Klient)
{elseif $user->group_id == 9}(Demouživatel)
{else}(Podnikatel)
{/if}" n:href="Settings:default"><span class="icon-user"></span> <span style="font-weight:normal">{$user->first_name} {$user->last_name}</span></a></li>   
              <li><a n:href="Sign:logout" title="Odhlásit"><span class="icon-off"></span></a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>



      <div class="navbar-inner navbar-inner-second">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="nav-collapse">
          {if $user->group_id == 3}
            <ul class="nav" style="text-align:center">
              <li{ifCurrent Projects:*} class="active"{/ifCurrent}><a n:href="Projects:default"><span class="icon-folder-open"></span><br />Projekty</a></li>     
              <li{ifCurrent Invoices:*} class="active"{/ifCurrent}><a n:href="Invoices:default"><span class="icon-list-alt"></span><br />Faktury</a></li>
              <li{ifCurrent Settings:*} class="active"{/ifCurrent}><a n:href="Settings:default"><span class="icon-cog"></span><br />Nastavení</a></li>
              <!--<li{ifCurrent Messagess:*} class="active"{/ifCurrent}><a n:href="Messagess:default"><span class="icon-comment"></span><br />Komunikace</a></li>   
            --></ul>
          {else}
            <ul class="nav" style="text-align:center">
              <li{ifCurrent Summary:*} class="active"{/ifCurrent}><a n:href="Summary:default"><span class="icon-home"></span><br />Přehled</a></li> 
              <li{ifCurrent Projects:*} class="active"{/ifCurrent}><a n:href="Projects:default"><span class="icon-folder-open"></span><br />Projekty</a></li>     
              <li{ifCurrent Clients:*} class="active"{/ifCurrent}><a n:href="Clients:default"><span class="icon-user"></span><br />Klienti</a></li>
              <li{ifCurrent Suppliers:*} class="active"{/ifCurrent}><a n:href="Suppliers:default"><span class="icon-briefcase"></span><br />Dodavatelé</a></li>
              <li{ifCurrent Invoices:*} class="active"{/ifCurrent}><a n:href="Invoices:default"><span class="icon-list-alt"></span><br />Faktury</a></li> 
              <!--<li{ifCurrent Warehouse:*} class="active"{/ifCurrent}><a n:href="Warehouse:default"><span class="icon-th"></span><br />Sklad</a></li><!--   
              <li{ifCurrent Messagess:*} class="active"{/ifCurrent}><a n:href="Messagess:default"><span class="icon-comment"></span><br />Komunikace</a></li>  
              <li{ifCurrent Cars:*} class="active"{/ifCurrent}><a n:href="Cars:default"><span class="icon-book"></span><br />Kniha jízd</a></li>-->   
              <li{ifCurrent Settings:*} class="active"{/ifCurrent}><a n:href="Settings:default"><span class="icon-cog"></span><br />Nastavení</a></li>
            </ul>
          {/if}
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
{/if}

